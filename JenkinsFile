pipeline {
  agent any
  environment {
    WEBHOOK_URL = 'https://webhook.site/82d220fb-d957-424e-9808-f9e8f60cd12b' // replace with your mock or actual Teams webhook
  }
  stages {
    stage('Clone Repository') {
      steps {
        git(
          url: 'https://github.com/linasun021/JenkinsPTSC.git',
          branch: 'main'
        )
      }
    }

    stage('Install Dependencies') {
      steps {
        bat 'npm install'
        bat 'npx playwright install'
      }
    }

    stage('Run Cucumber Tests') {
      steps {
        bat 'npx cucumber-js'
      }
    }

    stage('Generate Allure Report') {
      steps {
        bat 'npx allure generate allure-results --clean -o allure-report'
        // Comment out this line if you don't want to open the report UI
        // bat 'npx allure open allure-report'
      }
    }
  }

  post {
    always {
      // Optional: requires Allure plugin installed
      allure includeProperties: false, jdk: '', results: [[path: 'allure-results']]
    }
    
    success {
      bat """
        curl -H "Content-Type: application/json" ^
             -d "{ \\"@type\\": \\"MessageCard\\", \\"@context\\": \\"http://schema.org/extensions\\", \\"summary\\": \\"✅ Build Passed\\", \\"themeColor\\": \\"00FF00\\", \\"title\\": \\"✅ Jenkins Build Passed\\", \\"text\\": \\"Build #${env.BUILD_NUMBER} of ${env.JOB_NAME} succeeded.\\" }" ^
             "%WEBHOOK_URL%"
      """
    }

    failure {
      bat """
        curl -H "Content-Type: application/json" ^
             -d "{ \\"@type\\": \\"MessageCard\\", \\"@context\\": \\"http://schema.org/extensions\\", \\"summary\\": \\"❌ Build Failed\\", \\"themeColor\\": \\"FF0000\\", \\"title\\": \\"❌ Jenkins Build Failed\\", \\"text\\": \\"Build #${env.BUILD_NUMBER} of ${env.JOB_NAME} failed.\\" }" ^
             "%WEBHOOK_URL%"
      """
    }
  }
}
